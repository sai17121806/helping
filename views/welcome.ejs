        }

        span:nth-child(5) {
            animation: fade-in 4s 1.9s forwards cubic-bezier(0.11, 0, 0.5, 0);
        }

        span:nth-child(6) {
            animation: fade-in 4s 2.1s forwards cubic-bezier(0.11, 0, 0.5, 0);
        }

        span:nth-child(7) {
            animation: fade-in 4s 2.3s forwards cubic-bezier(0.11, 0, 0.5, 0);
        }

        span:nth-child(8) {
            animation: fade-in 4s 2.5s forwards cubic-bezier(0.11, 0, 0.5, 0);
        }

        span:nth-child(9) {
            animation: fade-in 4s 2.7s forwards cubic-bezier(0.11, 0, 0.5, 0);
        }

        #btn {
            position: relative;
            top: 400px;
            left: 20%;
            opacity: 0;
            filter: blur(4px);
            animation: fade-in 4s 3s forwards cubic-bezier(0.11, 0, 0.5, 0);
        }

        @keyframes fade-in {
            50% {
                opacity: .6;
                filter: blur(1px);
                color: darkred;
            }

            80% {
                opacity: 1;
                filter: blur(0);
                color: rgb(253, 68, 87);
            }

            100% {
                opacity: 1;
                filter: blur(0);
                color: red;
            }
        }

        #btn button,
        #login-btn {
            text-transform: uppercase;
            font-size: 14px;
            padding: 10px 20px;
            background: red;
            color: black;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }

        #login-btn {
            padding: 10px 45px;
            position: relative;
            left: 40%;
            top: 50px;
        }

        #btn button:hover,
        #login-btn:hover {
            border: 1px solid red;
            background: transparent;
            color: red;
        }

        #about {
