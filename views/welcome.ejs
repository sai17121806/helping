    <style>
        @import url("https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900");

        * {
            font-family: Arial, Helvetica, sans-serif;
        }

        #bg-video {
            position: fixed;
            right: 0;
            bottom: 0;
            width: 100%;
            min-height: 100%;
            z-index: -10;
        }

        body {
            overflow: hidden;
        }

        #logo {
            position: relative;
            top: 30px;
            left: 10px;
            padding: 10px;
            width: 200px;
            mix-blend-mode: screen;
            visibility: hidden;
        }

        #title {
            text-transform: uppercase;
            background-image: linear-gradient(-225deg,
                    red 0%,
                    black 50%,
                    red 100%);
            background-size: auto auto;
            background-clip: border-box;
            background-size: 200% auto;
            color: #fff;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: textclip 2s linear infinite;
            display: inline-block;
            font-size: 15px;
            font-weight: bolder;
            position: relative;
            left: -100px;
            visibility: hidden;
        }

        @keyframes textclip {
            to {
                background-position: 200% center;
            }
        }

        h2,
        #qoute {
            color: #fff;
            top: 50px;
            left: 45%;
            position: absolute;
            text-transform: uppercase;
            transform: translate(-50%, -50%);
            font-family: "Poppins", sans-serif;
            font-size: 2em;
            cursor: default;
        }

        h2:nth-child(1) {
            color: transparent;
            -webkit-text-stroke: 2px red;
        }

        h2:nth-child(2) {
            color: black;
            animation: animate 4s ease-in-out infinite;
        }

        @keyframes animate {

            0%,
            100% {
                clip-path: polygon(0% 45%,
                        16% 44%,
                        33% 50%,
                        54% 60%,
                        70% 61%,
                        84% 59%,
                        100% 52%,
                        100% 100%,
                        0% 100%);
            }

            50% {
                clip-path: polygon(0% 60%,
                        15% 65%,
                        34% 66%,
                        51% 62%,
                        67% 50%,
                        84% 45%,
                        100% 46%,
                        100% 100%,
                        0% 100%);
            }
        }

        #qoute {
            top: 10%;
            font-size: 4em;
            left: 30%;
            width: 600px;
            transform: scale(0.84);
            color: red;
            text-shadow: 0px 0px 10px;
            animation: scale 3s forwards cubic-bezier(0.5, 1, 0.89, 1);
        }

        @keyframes scale {
            100% {
                transform: scale(1);
            }
        }

        span {
            display: inline-block;
            opacity: 0;
            filter: blur(4px);
            padding: 0px 3px;
        }

        span:nth-child(1) {
            animation: fade-in 4s 1.1s forwards cubic-bezier(0.11, 0, 0.5, 0);
        }

        span:nth-child(2) {
            animation: fade-in 4s 1.3s forwards cubic-bezier(0.11, 0, 0.5, 0);
        }

        span:nth-child(3) {
